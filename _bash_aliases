# GENERAL
alias grep='grep --color=auto'
alias sudo='sudo -E '
alias ls='ls --color=auto --group-directories-first'
alias ll='ls -lAh'
alias la='ls -A'
alias l='ls -CF'
alias cd..='cd ..'
alias ..='cd ..'
alias win='nautilus .'
alias q='exit'
alias untar='tar -xvzf'
alias uz='tar -xvzf'


# APT
alias upd='sudo apt update'
alias inst='sudo apt install'
alias rmv='sudo apt remove'
alias cln='sudo apt-get autoremove'
alias updatelog="tail /var/log/apt/term.log"


# GIT
alias ga='git add . --all'
alias gb='git branch'
alias gba='git branch -a | grep %*'
alias gc='git commit -am %*'
alias gp='git push'
alias gs='git status -sb'
alias gu='git pull'
alias log='git log -10 --date=short --abbrev-commit --pretty=format:"%Cred%h %Creset%ad %Cgreen%an %Creset%s %C(yellow)%cr%C(bold blue)%d%Creset"'
alias logg='git log -10 --graph --date=short --abbrev-commit --branches --pretty=format:"%Cred%h %Creset%ad %Cgreen%an %Creset%s %C(yellow)%cr%C(bold blue)%d%Creset"'


# OTHER
alias st='/opt/sublime_text/sublime_text'
alias subs='subliminal -l pl --color --'
alias pro='cd /mnt/Magazyn/Projects'

